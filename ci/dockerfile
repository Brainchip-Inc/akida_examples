ARG TF_VERSION=2.15.0-gpu
FROM tensorflow/tensorflow:$TF_VERSION
MAINTAINER KT <ktsiknos@brainchip.com>

RUN apt-get update && apt-get install libgl1-mesa-glx libasound2-dev -y
RUN python -m pip install --upgrade pip && \
    pip install torch==2.0.1 torchvision --index-url https://download.pytorch.org/whl/cu118
RUN pip install sphinx \
                sphinx_rtd_theme \
                sphinx-gallery \
                sphinx_design \
                autodocsumm \
                matplotlib \
                scikit-learn \
                tensorflow-datasets \
                scipy \
                opencv-python \
                mtcnn==0.1.1 \
                imgaug \
                trimesh \
                librosa \
                soundata \
                'tensorboardX<2.6.1' \
                optimum[exporters] \
                onnx~=1.16.1 \
                onnxruntime==1.19.0 \
                flake8==4.0.1

ENV TF_FORCE_GPU_ALLOW_GROWTH=true

CMD ["/bin/bash"]
